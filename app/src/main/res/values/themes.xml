<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartTasks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/amsi_pro_regular</item>
        <item name="colorPrimary">@color/st_yellow</item>
        <item name="android:windowBackground">@color/st_yellow</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/amsi_pro_bold</item>
    </style>

    <style name="Theme.SmartTasks" parent="Base.Theme.SmartTasks" />

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/amsipro_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>